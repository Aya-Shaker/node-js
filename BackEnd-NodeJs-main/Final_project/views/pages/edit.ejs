<div class="bg-success rounded text-light text-center
     p-3 mx-auto w-50 my-5 container">
    <h2> Edit Course </h2>
</div>

<div class="events-list my-5 container w-50 mx-auto">
    <form action="/update/<%= event.id %>" method="post">
        <div class="form-group my-2">
            <label for="title">Course Name</label>
            <input type="text" class="form-control" 
            name="title" id="title" value="<%= event.title %>">
        </div>
        <div class="form-group my-2">
            <label for="price">Course Price</label>
            <input type="number" class="form-control" name="price" 
            id="price" value="<%= event.price %>">
        </div>
        <div class="form-group my-2">
            <label for="description">Course Description</label>
            <textarea  class="form-control" name="description" id="description">
                <%= event.description %>
            </textarea>
        </div>
        <input type="submit" value="Edit Event" 
        class="btn btn-success">
    </form>
</div>
